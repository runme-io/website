{
  "name": "runme-website",
  "description": "This is the Website for runme.io",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jexia-com/runme-website.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build --legacy",
    "commit": "git-cz",
    "export": "sapper export --legacy",
    "start": "PORT=80 node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "pretest": "lint-staged",
    "test": "run-p --race dev cy:run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretest",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branch": "master",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@primer/css": "^14.3.0",
    "@varandas/fetch-readme": "^1.0.5",
    "ansi_up": "^4.0.4",
    "compression": "^1.7.1",
    "dotenv": "^8.2.0",
    "git-url-parse": "^11.1.2",
    "github-url-to-object": "^4.0.4",
    "jexia-sdk-js": "^5.3.0",
    "marked": "^0.8.2",
    "moment": "^2.24.0",
    "perfect-scrollbar": "^1.5.0",
    "polka": "next",
    "sirv": "^0.4.0",
    "tingle.js": "^0.15.3",
    "tippy.js": "~6.0.1",
    "url": "^0.11.0",
    "yaml": "^1.9.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/runtime": "^7.9.2",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@fortawesome/free-brands-svg-icons": "^5.13.0",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/github": "^7.0.7",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "autoprefixer": "^9.7.5",
    "babel-eslint": "^10.1.0",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "fa-svelte": "^3.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-plugin-svelte": "^1.1.0",
    "rollup": "^1.20.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^5.3.0",
    "sapper": "^0.27.11",
    "sass": "^1.26.3",
    "semantic-release": "^17.1.0",
    "svelte": "^3.49.0",
    "svelte-highlight": "^0.6.0",
    "svelte-preprocess": "^3.6.0",
    "svelte-tabs": "https://github.com/marlosin/svelte-tabs.git#fix/selected-tab-index"
  },
  "lint-staged": {
    "*.{js,svelte}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
